@model IEnumerable<CorporateAssetManager.Models.AssetAssignment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Activo / Equipo</th>
            <th>Empleado</th>
            <th>Fecha Asignación</th>
            <th>Fecha Devolución</th>
            <th>Comentarios</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (item.Asset != null)
                {
                    <strong>@Html.DisplayFor(modelItem => item.Asset.Name)</strong>
                    <br>
                    <small class="text-muted">
                        @Html.DisplayFor(modelItem => item.Asset.SerialNumber)
                    </small>
                }
                else
                {
                    <span class="text-muted">N/A</span>
                }
            </td>
            <td>
                @if (item.Employee != null)
                {
                    @Html.DisplayFor(modelItem => item.Employee.FullName)
                }
                else
                {
                    <span class="text-muted">N/A</span>
                }
            </td>
            <td>
                @item.AssignedDate.ToShortDateString()
            </td>
            <td>
                @if (item.ReturnDate != null){
                    @item.ReturnDate.Value.ToShortDateString()
                }else{
                    <span class="text-muted">No devuelto</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="text-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="text-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Delete</a> |
                <a asp-action="ReturnAsset" asp-route-id="@item.Id" class="text-success">Devolver</a>
            </td>
        </tr>
}
    </tbody>
</table>
